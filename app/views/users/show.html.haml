- content_for(:stylesheet_includes) do
  = stylesheet_link_tag('projects')

%section
  %header
    .user-info
      %h2
        = image_tag UserDecorator.new(@user).gravatar
        = link_to @user.full_name, staffplan_path(@user)
      %span.last-updated
        = "(as of #{time_ago_in_words(@user.updated_at)} ago)"
    = link_to 'Edit', edit_user_path(@user)
    = link_to 'Destroy', @user, :confirm => 'Are you sure?', :method => :delete

  %ul
    %li= @user.email
  - if current_user.handles_financials_of?(current_user.current_company)
    = UserDecorator.new(@user).permissions_information_for_company(current_user.current_company)  
    = UserDecorator.new(@user).employment_information_for_company(current_user.current_company)  
