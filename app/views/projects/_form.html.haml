= form_for @project do |f|
  -if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg
          
  .field
    = f.label(:name)
    = f.text_field(:name)

  .field
    = f.label(:active, class: 'inline')
    = f.check_box(:active)
    
  .actions
    = f.submit(t('.save'))
    = link_to(t('.cancel'), project_path(@project))
