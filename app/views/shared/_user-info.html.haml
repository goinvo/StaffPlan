- small ||= nil
- email ||= nil
- url   ||= user

.user-info{ class: small ? "small" : "" }
  = link_to url do
    = image_tag "http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(user.email.downcase)}", class: 'gravatar'
    %span.name
      = link_to user.full_name, staffplan_path(user)
    - if email
      %span.email= "<#{user.email}>"
