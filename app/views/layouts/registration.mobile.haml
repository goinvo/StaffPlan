!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", content: "IE=edge,chrome=1"}
    %meta{"http-equiv" => "Content-Type", content: "text/html; charset=utf-8"}
    %meta{name: "viewport", content: "user-scalable=no, width=device-width, initial-scale=1.0"}
    %meta{name: "apple-mobile-web-app-capable", content: "yes"}
    %meta{name: "apple-mobile-web-app-status-bar-style", content: "black"}
    
    %title StaffPlan Registration
    
    = stylesheet_link_tag "mobile/application", :media => 'screen, projection'
    = yield(:stylesheet_includes)
    = javascript_include_tag 'mobile/application'
    = csrf_meta_tags
    
  %body{:id => controller_name, :class => action_name}
  
    = render(:partial => "shared/formatted_flash")
          
    %section.main
      .content= yield
      
    %footer      
      - if is_mobile_device?
        = link_to("Full Site", "?mobile_view=false")